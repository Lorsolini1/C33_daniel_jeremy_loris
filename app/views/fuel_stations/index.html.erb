<h1>FuelStations</h1>

<%= form_tag root_url, method: "get" do %>
  <div>
      <%= label_tag :origin, "Origin" %>
      <%= text_field_tag :origin, params[:origin]  %>
  </div>
  <div>
      <%= label_tag :destination, "Destination" %>
      <%= text_field_tag :destination, params[:destination] %>
  </div>
  <%= submit_tag "Search" %>
<% end %>

<% if @stations.size > 0 %>
  <%= render 'table', stations: @stations %>
<% elsif params[:origin].present? && params[:destination].present? %>
  <p>Something went wrong with the NREL API, try again!</p>
<% end %>

